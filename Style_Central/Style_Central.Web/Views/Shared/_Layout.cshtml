<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Style_Central</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @* data-tables *@
    <link src="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css" />
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

    <link href="../css/site.css" rel="stylesheet" />
    <!-- plugins:css -->
    <link rel="stylesheet" href="../themefolder/vendors/feather/feather.css">
    <link rel="stylesheet" href="../themefolder/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../themefolder/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../themefolder/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="../themefolder/images/favicon.png" />
    <link rel="stylesheet" href="../themefolder/vendors/mdi/css/materialdesignicons.min.css">
</head>

<body>
    <div class="container-scroller">
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="/">
                        <img src="../themefolder/images/logo-mini.svg" class="mr-2" alt="logo" />
                    <span class="brand-name">Style-Central</span>
                </a> 
                        
                <a class="navbar-brand brand-logo-mini" href="/"><img src="../themefolder/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
              
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>

                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item">
                        <button class="mx-3 btn btn-outline-dark cls-logoutbtn" onclick="logout()">Logout</button>
                    </li>
                </ul>
            </div>
           
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
           
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Product">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Products</span>
                        </a>
                    </li>
                    @if (Context.Session.GetInt32("IsAdmin") is not 1)
                    {
                        <li class="nav-item">
                            <a href="/Order" class="nav-link">
                                <i class="icon-grid menu-icon"></i>
                                <span class="menu-title">Order</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Cart" class="nav-link">
                                <i class="icon-grid menu-icon"></i>
                                <span class="menu-title">Cart</span>
                                <span class="badge bg-primary" id="cartItemCount">0</span>
                            </a>
                        </li>
                    }
                 
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
			<div class="loader"></div>
                <div class="content-wrapper">
                  @RenderBody()
                </div>
               
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    
   
    <script src="../themefolder/js/off-canvas.js"></script>
    <script src="../themefolder/js/hoverable-collapse.js"></script>
    <script src="../themefolder/js/template.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* toaster *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
